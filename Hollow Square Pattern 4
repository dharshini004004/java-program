import java.io.*;
import java.util.*;
import java.text.*;
import java.math.*;
import java.util.regex.*;

public class HollowSquarePattern 
{
    public static void main(String[] args)
    {
        Scanner scanner = new Scanner(System.in);
        int n = scanner.nextInt();  
        scanner.close();

        for (int i = 0; i < n; i++)
        {
            for (int j = 0; j < n; j++) 
            {
                
                if (i == 0 || i == n - 1 || j == 0 || j == n - 1)
                {
                    System.out.print("*");
                } else 
                {
                    System.out.print(" ");
                }
            }
            System.out.println();  
        }
    }
}
